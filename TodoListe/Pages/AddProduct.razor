@page "/addProduct"


<h3>AddProduct</h3>

<form>
    <div class="row">
        <div class="col-md-2">
            <label class="control-label">Name</label>
            <input class="form-control" @bind="@newProduct.Name"/>
        </div>
        <div class="col-md-2">
            <label class="control-label">Anzahl</label>
            <input class="form-control" @bind="@newProduct.Anzahl" />
        </div>
        <div class="col-md-2">
            <label class="control-label">Category</label>
            <input class="form-control" @bind="@newProduct.Category" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4">
            <div class="form-group">
                <button type="button" @onclick="@CreateProduct" class="btn btn-primary">Save</button>
                <button type="button" @onclick="@Cancel" class="btn btn-danger">Cancel</button>
            </div>
        </div>
    </div>
</form>

@code {
    Product newProduct = new();

    protected async void CreateProduct()
    {
        await productService.InsertProduct(newProduct);
        navigationManager.NavigateTo("Products");
    }

    void Cancel()
    { 
    navigationManager.NavigateTo("Products");       
    }

}
